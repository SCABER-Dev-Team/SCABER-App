<div class="pass-pages pass-travel" id="pass-test1">
    <div class="row">
        <div class="col s12 m6">
            <div class="card card-travel">
                <div class="card-content card-content-contrast">
                    <div class="row">
                        <div class="col s6 m6 l6 center-align">
                            <div class="card-travel-info">
                                <p class="medium-small">預估車程</p>
                                <h5>00:00 </h5>
                            </div>
                        </div>
                        <div class="col s6 m6 l6 center-align">
                            <div class="card-travel-info">
                                <p class="medium-small">預估車資</p>
                                <h5>約 0 元</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="toolbar pass-toolbar-monitor" id="pass-toolbar-monitor">
        <div class="row">
            <div class="col s12 m12 l12">
                <button class="waves-effect waves-light btn btn-large" onclick="triggerPassengerBookModal('monitor');">查看監督
                    <i class="material-icons right">event</i>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal viewing monitor -->
<div class="modal bottom-sheet modal-monitor" id="modal-monitor">
    <div class="modal-content">
        <h4>監督用戶</h4>
        <ul class="collection collection-avatar">
            <li class="collection-item avatar">
                <i class="material-icons circle">perm_identity</i>
                <p class="title">[Name]</p>
                <p class="content-p" id="driver-phone">[phone]</p>
                <button class="secondary-content waves-effect waves-green btn">移除守護</button>
            </li>
        </ul>
    </div>
</div>

<!-- Modal finish path routing -->
<div class="modal modal-finish" id="modal-finish">
    <div class="modal-content">
        <h5>SCABER 旅程結束！</h5>
        <ul class="collection collection-avatar">
            <li class="collection-item avatar">
                <i class="material-icons circle">timer</i> 
                <p class="title">本趟旅程耗時</p>
                <p class="content-p" id="driver-name">[consume]</p>
            </li>
            <li class="collection-item avatar">
                <i class="material-icons circle">favorite</i> 
                <p class="title">本趟旅程守護人數</p>
                <p class="content-p" id="driver-name">[number]</p>
            </li>
        </ul>
    </div>
    <div class="modal-footer">
        <button class="modal-action modal-close waves-effect waves-green btn-flat">關閉視窗</button>
        <button class="modal-action modal-close waves-effect waves-green btn-flat" id="startBtn">給與評價</button>
    </div>
</div>
